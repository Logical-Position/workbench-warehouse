header {
    padding: 6px;
}

.nav-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.top-level-link {
    text-decoration: none;
    height: 100%;
}

.nav-icon {
    width: 22px;
}

.nav-chevron {
    width: 16px;
    display: inline-block;
    transform: translate(0, 4px); /* Little hack to center the chevrons vertically */
}

@media (max-width: 1023px) {
    .desktop-menu { display: none; }
    .hamburger-menu { display: initial; }

    .nav-icon {
        margin-right: 0;
    }

    .nav-chevron {
        width: 18px;
    }
}

@media (min-width: 1024px) {
    .desktop-menu { display: initial; }
    .hamburger-menu { display: none; }
}