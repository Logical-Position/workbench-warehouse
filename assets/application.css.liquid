:root {
    --neutral-50: #fafafaff;
    --neutral-100: #f5f5f5ff;
    --neutral-200: #e5e5e5ff;
    --neutral-300: #d4d4d4ff;
    --neutral-400: #a3a3a3ff;
    --neutral-500: #737373ff;
    --neutral-600: #525252ff;
    --neutral-700: #404040ff;
    --neutral-800: #262626ff;
    --neutral-900: #171717ff;
    --red-600: #dc2626
}

{% comment %}Get's rid of Chrome user agent stylesheet margin{% endcomment %}
* {
    {% comment %}outline: 1px solid pink;{% endcomment %}
    box-sizing: border-box;
}

body {
    margin: 0;
    font-family: 'Josefin Sans', 'Trebuchet MS', Helvetica, sans-serif;
}

.nav-bar {
    background-color: var(--neutral-50);
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    height: 50px;
}

.nav-t1-link-container {
    display: flex;
}

.nav-t1-link {
    color: var(--neutral-700);
    padding: 0 10px 10px 10px;
    text-decoration: none;
    outline: none;
    border: none;
}

.nav-t1-link:hover, .customer-link:hover {
    text-decoration: underline;
    color: var(--neutral-900);
}

.nav-icon {
    width: 20px;
    height: 20px;
    color: var(--neutral-700);
    margin: 0 3px;
}

.nav-icon:first-of-type {
    margin-left: 0;
}

.nav-icon:last-of-type {
    margin-right: 20px;
}

.nav-icon:last-of-type:hover {
    color: var(--red-600);
    fill: var(--red-600);
}

.nav-icon:hover {
    cursor: pointer;
    color: var(--neutral-900);
}

.nav-account-section {
    display: flex;
    align-items: end; 
}

.nav-dropdown {
    background-color: var(--neutral-50);
    position: absolute;
    width: 100vw;
    top: 50px;
    left: 0;
    border-top: 1px solid var(--neutral-200);
    padding: 50px 70px;
}

.nav-t2-link-container {
    display: flex;
}

.nav-t2-link {
    font-weight: 700;
    text-decoration: none;
    color: var(--neutral-700);
    font-size: 1.2rem;
}

.nav-featured-links {
    width: 40%;
    margin-left: auto;
}

.nav-featured-links h4 {
    margin-top: 0;
}

.nav-featured-links-grid {
    display: grid;
    grid-template-columns: 50% 50%;
    grid-template-rows: 50% 50%;
}

.nav-featured-link {
    width: 100%;
    height: 100%;
}

.nav-t3-link-container {
    display: flex;
    flex-direction: column;
    margin-right: 30px;
}

.nav-t3-link {
    color: var(--neutral-500);
    text-decoration: none;
    margin: 10px 0;
}

.nav-t3-link:hover {
    text-decoration: underline;
}

.customer-link {
    color: var(--neutral-700);
    text-decoration: none;
}

.customer-link:first-of-type {
    margin-right: 5px;
}

.customer-link:last-of-type {
    margin-left: 5px;
}